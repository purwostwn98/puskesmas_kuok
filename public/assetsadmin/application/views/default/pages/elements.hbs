<div class="page-header border-0">
    <h1 class="page-title text-primary-d2">
        {{title}}
         <small class="page-info text-secondary-d2">
            <i class="fa fa-angle-double-right text-80"></i>
            Common UI Features &amp; Elements 
        </small>
    </h1>
</div>


<div class="h-1"></div>


<div class="row">
  <div class="col-12">
        <div class="sticky-nav">
            <ul class="nav nav-tabs page-nav-tabs nav-tabs-boxed nav-justified nav-tabs-scroll is-scrollable mx-n3 mx-lg-0" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active pl-3" id="tabs-tab" data-toggle="tab" href="#tabs" role="tab" aria-controls="tabs" aria-selected="true">
                        <i class="text-success-m2 fa fa-home mr-2 text-110"></i>
                        Tabs &amp; Accordions
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn-lighter-warning btn-h-lighter-warning btn-a-lighter-warning brc-warning-m1 d-style" id="alerts-tab" data-toggle="tab" href="#alerts" role="tab" aria-controls="alerts" aria-selected="false">
                        <i class="text-danger-m3 fas fa-exclamation-triangle mr-2 text-110"></i>
                        <span class="d-n-active text-secondary-m1">Alerts</span>
                        <span class="d-active text-orange-d2">Alerts</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="modals-tab" data-toggle="tab" href="#modals" role="tab" aria-controls="modals" aria-selected="false">
                        <i class="text-orange-m1 fas fa-window-maximize mr-2 text-110"></i>
                        Modals &amp; Sliders
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="tooltips-tab" data-toggle="tab" href="#tooltips" role="tab" aria-controls="tooltips" aria-selected="false">
                        <i class="text-blue-m1 far fa-comment-alt mr-2 text-110"></i>
                        Tooltips &amp; Popovers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link pr-3" id="misc-tab" data-toggle="tab" href="#misc" role="tab" aria-controls="misc" aria-selected="false">
                        <i class="text-pink-m1 fas fa-cubes mr-2 text-110"></i>
                        Dropdowns &amp; More
                    </a>
                </li>
            </ul>
        </div>

            <div class="tab-content border-0 px-0 pt-5">
                <div class="tab-pane fade show active" id="tabs" role="tabpanel" aria-labelledby="tabs-tab">
                    <div class="row mb-1">
                        <div class="col-lg-6 mx-auto">
                            <div class="alert alert-collapse bgc-warning-l4 radius-2px border-l-3 brc-warning-tp4 text-dark-tp3 text-105 py-3 mt-n2 mb-4">
                                <button type="button" class="close" data-dismiss="alert">
                                    <i class="text-70 fa fa-times align-top text-grey"></i>
                                </button>

                                <i class="fa fa-hand-point-up mr-1 text-warning-d1 text-150 rotate-45"></i>
                                The above tab buttons stick below navbar as you scroll down
                            </div>
                        </div>
                    </div>

                   {{> page/tabs}}
                   <div class="my-2 h-1"></div>                 
                   <hr class="border-double brc-default-l1 my-4" />
                   {{> page/accordions}}
                </div>

                <div class="tab-pane fade" id="alerts" role="tabpanel" aria-labelledby="alerts-tab">
                    {{> page/alerts}}
                </div>

                <div class="tab-pane fade " id="modals" role="tabpanel" aria-labelledby="modals-tab">
                    {{> page/modals}}
                </div>              

                <div class="tab-pane fade" id="tooltips" role="tabpanel" aria-labelledby="tooltips-tab">
                    {{> page/tooltips}}
                </div>

                <div class="tab-pane fade" id="misc" role="tabpanel" aria-labelledby="misc-tab">
                    {{> page/misc}}
                </div>
            </div>

  </div>
</div>



