<div class="col-12 col-sm-4 px-md-2 mb-2 mb-sm-0">
    <div id="tasks-1" class="h-100 radius-2px bgc-secondary-l4 py-2 px-25 border-t-2 brc-warning-m1">
        <div class="d-flex align-items-center">
            <h5 class="text-secondary-d3 m-2 mb-3 pb-1"><i class="text-80 fa fa-list text-dark-tp3 mr-1"></i> Todo</h5>
            <button type="button" class="ml-auto btn btn-outline-default btn-sm btn-bold"><i class="fa fa-plus"></i><span class="ml-1">New Task</span></button>
        </div>
        {{#each (get "task-1")}}
        <div class="task-item mb-25 radius-3px border-1 bgc-white brc-secondary-l1 px-2 pt-3 pb-3 pos-rel">
            {{#if progress}}
             <div class="position-bl border-b-3 brc-{{color}}-tp2 ml-n1px" style="width: {{progress}}%"></div>
            {{/if}}

            <div class="pl-1">
                {{#if title}}
                    <div class="text-600 text-blue-d2 text-95">
                        {{title}}
                    </div>
                {{/if}}
                {{#if content}}
                    <div>
                        {{content}}
                    </div>
                {{/if}}
            </div>

            <div class="d-flex">
                <div>
                 {{#if time}}
                    <span class="badge badge-secondary"><i class="fa fa-clock mr-1"></i> {{time}}</span>
                 {{/if}}
                 {{#if done}}
                    <span class="badge badge-success"><i class="fa fa-check mr-1"></i> {{done}}</span>
                 {{/if}}
                </div>

                <div class="align-self-end">
                    {{#if avatar}}
                    <img src="assets/image/avatar/{{avatar}}" class="radius-1 brc-default-m1 w-4 h-4" />
                    {{/if}}
                </div>

                <div class="py-1 position-tr mt-n2 mr-n1">
                    <div class="dropdown dd-backdrop dd-backdrop-none-md">
                        <a class="btn btn-outline-default btn-h-outline-primary btn-brc-tp btn-xs dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-ellipsis-h"></i>
                        </a>
                        <div class="dropdown-menu mw-auto dropdown-caret dropdown-menu-right dropdown-animated animated-1 dd-slide-center dd-slide-none-md">
                          <div class="dropdown-inner">
                            <a class="dropdown-item" href="#" title="Delete task" data-toggle="tooltip" data-placement="left" data-template='<div class="tooltip" role="tooltip"><div class="arrow brc-danger"></div><div class="tooltip-inner text-110 pb-2 bgc-danger"></div></div>'>
                                <i class="fa fa-trash text-danger mx-1"></i>
                                <span class="d-md-none">Delete task</span>
                            </a>
                          </div>
                        </div>
                    </div>
                </div>
            </div>

           {{#if badge}}
            <div class="px-1 mt-1">
                {{{badge}}}
            </div>
           {{/if}}


        </div>
        {{/each}}
    </div>
</div>


