{{#each (get "activity")}}
<div class="mb-2 text-grey-m1 text-95 border-l-3 brc-{{color}} pl-3">
    <div class="d-flex align-items-start">
        {{#if abbr}}
            <span class="w-5 h-5 d-inline-flex align-items-center justify-content-center radius-round mr-1 pb-1 bgc-primary-l2 text-primary font-bolder text-90">
                <span>{{abbr}}</span>
            </span>
        {{else}}
            <img src="assets/image/avatar/{{avatar}}" class="border-1 brc-success-m1 radius-round p-1px w-5" />
        {{/if}}

        <div class="mx-2">
            <span class="font-bolder text-blue-d1">
                {{name}}
            </span>
            {{{summary}}}
        </div>

        <span class="text-90 text-grey-m1 ml-auto text-nowrap">
            {{time}}
        </span>
    </div>
</div>
<hr class="brc-grey-l2" />
{{/each}}