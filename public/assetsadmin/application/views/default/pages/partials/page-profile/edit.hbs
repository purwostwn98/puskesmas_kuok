<h4 class="text-blue-d1 text-130 mt-3">Update profile info</h4>
<hr />

<div class="row">
    <div class="col-12 col-md-10 offset-md-1 mt-3">

        <form class="text-grey-d1 text-95">

            <div class="form-group row mx-0">
                <div class="col-sm-6 offset-sm-3">
                    <input type="file" class="form-control" id="id-field0" placeholder="e.g. Alex Doe" />
                </div>
            </div>

            <div class="form-group row mx-0">
                <label for="id-field1" class="col-sm-3 col-form-label text-sm-right">Full Name</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="id-field1" placeholder="e.g. Alex Doe" />
                </div>
            </div>

            <div class="form-group row mx-0">
                <label for="id-field2" class="col-sm-3 col-form-label text-sm-right">Email Address</label>
                <div class="col-sm-6">
                    <input type="email" class="form-control" id="id-field2" placeholder="Enter your email address here" />
                </div>
            </div>

            <hr class="border-dotted" />

            <div class="form-group row mx-0">
                <label for="id-field3" class="col-sm-3 col-form-label text-sm-right">Phone Number</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="id-field3" placeholder="e.g. (+44) 3482342" />
                </div>
            </div>

            <div class="form-group row mx-0">
                <label for="id-field4" class="col-sm-3 col-form-label text-sm-right">Location</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="id-field4" placeholder="" />
                </div>
            </div>
        </form>

    </div>



        
    <div class="col-12">
        <hr class="border-double" />

        <div class="form-group col-md-6 offset-md-3 mt-2">
            <button type="button" class="btn btn-warning btn-block btn-md btn-bold mt-2 mb-3 radius-2">
                Save Changes
            </button>
        </div>
    </div>

</div>